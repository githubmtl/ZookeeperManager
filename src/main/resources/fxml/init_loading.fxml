   <children>
      <ProgressIndicator prefHeight="209.0" prefWidth="181.0">
         <cursor>
            <Cursor fx:constant="NONE" />
         </cursor>
         <effect>
            <ColorAdjust brightness="0.17" contrast="1.0" hue="1.0" saturation="0.19">
               <input>
                  <Bloom />
               </input></ColorAdjust>
         </effect>
      </ProgressIndicator>
      <Label alignment="CENTER" prefHeight="27.0" prefWidth="85.0" style="-fx-background-color: #FFFFFF;" text="请稍等..." textFill="#da6854">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <VBox.margin>
            <Insets left="27.5" />
         </VBox.margin>
      </Label>
   </children>
</VBox>
